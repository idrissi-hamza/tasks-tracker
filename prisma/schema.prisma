generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Player {
  id         String   @id
  firstname  String
  lastname   String
  goal       Int?
  salary     Int?
  devise     String?
  pictureURL String?  @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime

  @@unique([firstname, lastname])
}
